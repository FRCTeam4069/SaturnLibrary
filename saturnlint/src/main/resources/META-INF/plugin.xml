<idea-plugin>
    <id>frc.team4069.saturnlint</id>
    <name>Saturn Lint</name>
    <vendor email="redrield@gmail.com">FRC Team 4069</vendor>

    <description>Series of lints to adhere to the style guide of FRC Team 4069. Part of SaturnShell</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
      <!-- Inspection tool provider bit here -->
        <inspectionToolProvider implementation="frc.team4069.saturn.lint.SaturnLintProvider" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>